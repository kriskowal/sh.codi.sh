<html>
    <head>
        <link rel="extends" href="./object"/>
        <link rel="tag" href="gutentag/repeat.html"/>
        <link rel="tag" href="gutentag/reveal.html"/>
        <link rel="tag" href="gutentag/text.html"/>
        <link rel="tag" href="./value.html"/>
        <link rel="tag" href="./mode.html"/>
        <link rel="tag" href="./readline.html"/>
        <meta accepts="[body]" as="argument"/>
    </head>
    <body>
        <table id="objectBox" class="objectBox">
            <tr>
                <th class="keyHeader"><em>key</em></th>
                <th class="valueHeader element"><em>value</em></th>
            </tr>
            <reveal id="ifEmpty">
                <tr class="element">
                    <td colspan="2" id="emptyElement" class="element">
                        <em>no entries</em>
                    </td>
                </tr>
            </reveal>
            <repeat id="entries">
                <tr id="entryBox">
                    <th id="keyBox">
                        <div class="display key">
                            <text id="key"></text>
                        </div>
                    </th>
                    <td id="valueBox">
                        <value id="value">
                            <sp><strong>object:</strong> </sp>
                            <sp><span class="button"><u>k</u> prev</span> </sp>
                            <sp><span class="button"><u>j</u> next</span> </sp>
                            <sp><span class="button"><u>a</u>dd</span> </sp>
                            <sp><span class="button">⇧<u>a</u>ppend</span> </sp>
                            <sp><span class="button">pre-⇧<u>i</u>nsert</span> </sp>
                            <sp><span class="button"><u>d</u>elete</span> </sp>
                            <sp><span class="button"><u>g</u>o to first</span> </sp>
                            <sp><span class="button">⇧<u>g</u>o to last</span> </sp>
                        </value>
                    </td>
                </tr>
            </repeat>
            <reveal id="ifNewEntry">
                <tr id="entryBox">
                    <th class="key display">
                        <readline id="newKey"></readline>
                    </th>
                    <td></td>
                </tr>
            </reveal>
        </table>
        <mode id="mode">
            <sp><strong>object:</strong> </sp>
            <sp><span class="button"><u>a</u>dd</span> </sp>
            <sp><span class="button"><u>l</u> <u>⏎</u></span> </sp>
            <sp><span class="button"><u>h</u> <u>⎋</u></span> </sp>
            <argument></argument>
        </mode>
    </body>
</html>
