<html>
    <head>
        <link rel="extends" href="./map"/>
        <link rel="tag" href="gutentag/repeat.html"/>
        <link rel="tag" href="gutentag/reveal.html"/>
        <link rel="tag" href="./value.html"/>
        <link rel="tag" href="./mode.html"/>
        <meta accepts="[body]" as="argument"/>
    </head>
    <body>
        <div class="mapBox">
            <table>
                <tr>
                    <th class="keyHeader"><span class="element"><em>key</em></span></th>
                    <th class="valueHeader"><span class="element"><em>value</em></span></th>
                </tr>
                <reveal id="ifEmpty">
                    <tr>
                        <td colspan="2" class="emptyRow">
                            <span class="element" id="emptyElement"><em>no entries</em></span>
                        </td>
                    </tr>
                </reveal>
                <repeat id="elements">
                    <tr>
                        <th id="keyBox">
                            <value id="key">
                                <sp><strong>map:</strong> </sp>
                                <sp><span class="button"><u>hjkl</u> move</span> </sp>
                                <sp><span class="button"><u>a</u>dd</span> </sp>
                                <sp><span class="button"><u>d</u>elete</span> </sp>
                                <sp><span class="button"><u>g</u>o to first</span> </sp>
                                <sp><span class="button">⇧<u>g</u>o to last</span> </sp>
                                <sp><span class="button"><u>y</u>ank</span> </sp>
                            </value>
                        </th>
                        <td id="valueBox" class="valueBox">
                            <value id="value">
                                <sp><strong>map:</strong> </sp>
                                <sp><span class="button"><u>hjkl</u> move</span> </sp>
                                <sp><span class="button"><u>a</u>dd</span> </sp>
                                <sp><span class="button"><u>d</u>elete</span> </sp>
                                <sp><span class="button"><u>g</u>o to first</span> </sp>
                                <sp><span class="button">⇧<u>g</u>o to last</span> </sp>
                                <sp><span class="button"><u>y</u>ank</span> </sp>
                            </value>
                        </td>
                    </tr>
                </repeat>
            </table>
        </div>
        <mode id="mode">
            <sp><strong>map:</strong> </sp>
            <sp><span class="button"><u>⏎</u></span> </sp>
            <argument></argument>
        </mode>
        <mode id="emptyMode">
            <sp><strong>map:</strong> </sp>
            <sp><span class="button"><u>⏎</u></span> </sp>
            <sp><span class="button"><u>a</u> append</span> </sp>
            <sp><span class="button"><u>i</u> prepend</span> </sp>
            <argument></argument>
        </mode>
    </body>
</html>
